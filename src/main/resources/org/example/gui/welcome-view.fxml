<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.gui.controller.WelcomeController"
      alignment="CENTER"
      spacing="16"
      stylesheets="@styles/main.css"
      styleClass="welcome-root">
    <padding>
        <Insets top="32" right="32" bottom="32" left="32"/>
    </padding>

    <Label fx:id="welcomeLabel" styleClass="welcome-title" text="Xin chào!"/>
    <Button fx:id="closeButton" text="Đóng" onAction="#onClose" styleClass="primary-button"/>
</VBox>