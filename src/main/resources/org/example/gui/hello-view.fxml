<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.gui.controller.WebcamController"
      alignment="CENTER" spacing="15"
      style="-fx-background-color: #222; -fx-padding: 20;">

    <Label text="Đăng ký / Đăng nhập khuôn mặt" style="-fx-text-fill: white; -fx-font-size: 20;" />

    <HBox spacing="10" alignment="CENTER">
        <Label text="Tên người dùng:" style="-fx-text-fill: white;" />
        <TextField fx:id="textField" promptText="Nhập tên..." prefWidth="200"/>
    </HBox>

    <ImageView fx:id="imageView" fitWidth="600" fitHeight="600" preserveRatio="true"
               style="-fx-border-color: #666; -fx-border-width: 2;" />

    <Button text="Ghi nhận khuôn mặt" onAction="#onCaptureFaces"
            fx:id="captureButton"
            style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-size: 14;" />

    <Button text="Đăng nhập bằng khuôn mặt"
            onAction="#onLoginByFace"
            fx:id="loginButton"
            style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-size: 14;" />

    <Label fx:id="statusLabel" text="Trạng thái: Chờ thao tác..."
           style="-fx-text-fill: lightgreen; -fx-font-size: 14;" />
</VBox>
