<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.gui.controller.WebcamController"
            prefWidth="1000.0" prefHeight="720.0"
            stylesheets="@styles/main.css"
            styleClass="app-root">

    <top>
        <VBox alignment="CENTER" spacing="6" BorderPane.alignment="CENTER" styleClass="header">
            <Label text="Face Access Control" styleClass="header-title"/>
            <Label text="Register and sign in securely with your smile" styleClass="header-subtitle"/>
        </VBox>
    </top>

    <center>
        <StackPane alignment="CENTER" styleClass="camera-frame">
            <ImageView fx:id="imageView" fitWidth="680.0" fitHeight="520.0" preserveRatio="true"/>
        </StackPane>
    </center>

    <bottom>
        <VBox spacing="14" BorderPane.alignment="CENTER" styleClass="control-panel">
            <padding>
                <Insets top="24" right="24" bottom="24" left="24"/>
            </padding>

            <HBox alignment="CENTER" spacing="12">
                <Label text="Username" styleClass="input-label"/>
                <TextField fx:id="usernameField" promptText="Enter your username" prefWidth="260"/>
            </HBox>

            <HBox alignment="CENTER" spacing="12">
                <Button fx:id="captureButton" text="Capture Face" onAction="#onCaptureFaces" styleClass="primary-button"/>
                <Button fx:id="loginButton" text="Login with Face" onAction="#onLoginByFace" styleClass="secondary-button"/>
                <Button fx:id="stopButton" text="Stop Camera" onAction="#stopCamera" styleClass="danger-button"/>
            </HBox>

            <ProgressBar fx:id="progressBar" prefWidth="420"/>
            <Label fx:id="statusLabel" text="Status: Waiting for action..." styleClass="status-label"/>
        </VBox>
    </bottom>
</BorderPane>